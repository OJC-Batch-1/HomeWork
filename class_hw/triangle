public class triangle_c
{
    public static void main(String[]args)
    {
        triangle triang=new triangle(8,9,10);
        triang.area_perimeter();
    }
}
class triangle
{
    int a;
    int b;
    int c;
    public triangle(int a,int b,int c)
    {
        this.a=a;
        this.b=b;
        this.c=c;

    }
    public void area_perimeter()
    {   int peri=a+b+c;
    double are=(0.5*b*c);
    System.out.println("perimeter of triangle is = "+peri+"\narea of triangle = "+are);

    }
}
